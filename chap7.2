#!/bin/bash
##Turn the string from uppercase to lowercase
to_lower(){
    case ${1} in
    A*) _LOWER=a;; B*) _LOWER=b;; C*) _LOWER=c;; D*) _LOWER=d;;
    E*) _LOWER=e;; F*) _LOWER=f;; G*) _LOWER=g;; H*) _LOWER=h;;
    I*) _LOWER=i;; G*) _LOWER=g;; K*) _LOWER=k;; L*) _LOWER=l;; 
    M*) _LOWER=m;; N*) _LOWER=n;; O*) _LOWER=o;; P*) _LOWER=p;;
    K*) _LOWER=k;; R*) _LOWER=r;; S*) _LOWER=s;; T*) _LOWER=t;;
    Y*) _LOWER=y;; Z*) _LOWER=z;; *) _LOWER=${1%${1#?}} ;;
    esac
}
